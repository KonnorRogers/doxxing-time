---
layout: default
pagination:
  collection: documentation
paginate:
  collection: documentation
---

<div class="documentation-grid">
  <%= render "side_nav" %>
  <main style="display: flex; flex-direction: column;">
    <% title_id = resource.data.title.downcase.split(" ").join("-") %>
    <h1 id="<%= title_id %>">
      <a href="<%= "##{title_id}" %>">
        <%= resource.data.title.titleize %>
      </a>
    </h1>

    <%= yield %>

    <footer class="pagination-footer">
      <% previous_page = previous_page_in_category(resource) %>
      <% next_page = next_page_in_category(resource) %>

      <% if previous_page %>
        <sl-button class="previous-page" href="<%= previous_page.relative_url %>">
          <span slot="prefix">
            <sl-icon name="arrow-left" style="font-size: 1.5rem; display: block;"></sl-icon>
          </span>

          <span style="text-align: end; display: block;">
            <span style="display: block; color: var(--sl-color-neutral-500); font-size: 0.85rem;">
              Previous Page
            </span>
            <span style="font-size: 1.15rem;"><%= previous_page.data.title %></span>
          </span>

        </sl-button>
      <% else %>
        <div></div>
      <% end %>
      <% if next_page %>
        <sl-button class="next-page" href="<%= next_page.relative_url %>">
          <span style="text-align: start; display: block;">
            <span style="display: block; color: var(--sl-color-neutral-500); font-size: 0.85rem;">Next Page</span>
            <span style="font-size: 1.15rem;"><%= next_page.data.title %></span>
          </span>

          <span slot="suffix">
            <sl-icon name="arrow-right" style="font-size: 1.5rem; display: block;"></sl-icon>
          </span>

        </sl-button>
      <% end %>
    </footer>
  </main>
</div>

